<% layout('layout') -%>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">

                <br />
                    <p><span style="font-weight: bold">Name:</span> <%= user.profile.name %></p>
                    <p><span style="font-weight: bold">Email:</span> <%= user.email %></p>
                        
                <% if(user.company === "" || typeof user.company === 'undefined') { %>
                    <p><span style="font-weight: bold">Organization:</span> <span style="color: #c0392b; font-weight: bold">You have no affiliation</span></p>
                <% } else { %>
                    <p><span style="font-weight: bold">Organization:</span> <%= user.company %></p>
                <% } %>
                    <a href="/edit-profile" class="btn btn-primary" role="button">Edit Profile</a>
        </div>
    </div>
</div>